# Configurazione Server
PORT=3000
NODE_ENV=development

# Database MongoDB
# Per sviluppo con Docker (con autenticazione)
MONGODB_URI=mongodb://chat_user:chat_password123@localhost:27017/chat_organizer

# Per sviluppo locale senza Docker (senza autenticazione)
# MONGODB_URI=mongodb://localhost:27017/chat_organizer

# Per produzione (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chat_organizer

# WhatsApp Cloud API
WHATSAPP_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_ACCESS_TOKEN=your_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# WhatsApp App Configuration (per refresh token automatico)
WHATSAPP_APP_ID=your_app_id_here
WHATSAPP_APP_SECRET=your_app_secret_here
WHATSAPP_REFRESH_TOKEN=your_long_lived_token_here

# Inoltro messaggi
FORWARD_WEBHOOK_URL=
FORWARD_ENABLE_WHATSAPP=true
FORWARD_ENABLE_WEBHOOK=false

# Chat separata per messaggi filtrati
FORWARD_SEPARATE_CHAT=true
FORWARD_SEPARATE_CHAT_NUMBER=+393476835437

# Webhook URL (per produzione)
WEBHOOK_URL=https://yourdomain.com/webhook

# Filtri predefiniti
DEFAULT_FILTERS=[
  {
    "name": "Messaggi Urgenti",
    "description": "Filtra messaggi con parole chiave urgenti",
    "enabled": true,
    "keywords": ["orologio", "urgente", "emergenza", "asap"],
    "authors": [],
    "messageTypes": [],
    "timeRange": {
      "start": "00:00",
      "end": "23:59",
      "days": [1, 2, 3, 4, 5, 6, 7]
    },
    "actions": {
      "markAsImportant": true,
      "setPriority": "urgent",
      "addTags": ["urgente"],
      "archive": false
    }
  },
  {
    "name": "Messaggi di Lavoro",
    "description": "Filtra messaggi durante orario lavorativo",
    "enabled": true,
    "keywords": ["lavoro", "meeting", "progetto"],
    "authors": [],
    "messageTypes": [],
    "timeRange": {
      "start": "09:00",
      "end": "18:00",
      "days": [1, 2, 3, 4, 5]
    },
    "actions": {
      "markAsImportant": true,
      "setPriority": "high",
      "addTags": ["lavoro"],
      "archive": false
    }
  }
]
