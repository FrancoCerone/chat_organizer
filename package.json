{
  "name": "chat-organizer",
  "version": "1.0.0",
  "description": "Server Node.js per organizzare messaggi WhatsApp tramite webhook",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "build": "pkg . --out-path dist",
    "build:win": "pkg . --targets node18-win-x64 --out-path dist",
    "build:mac": "pkg . --targets node18-macos-x64 --out-path dist",
    "build:mac-arm": "pkg . --targets node18-macos-arm64 --out-path dist",
    "build:all": "pkg . --targets node18-win-x64,node18-macos-x64,node18-macos-arm64 --out-path dist"
  },
  "keywords": [
    "whatsapp",
    "webhook",
    "chat",
    "organizer",
    "nodejs"
  ],
  "author": "Franco",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "node_modules/whatsapp-web.js/**/*",
      "node_modules/puppeteer-core/**/*",
      ".wwebjs_auth/**/*",
      ".wwebjs_cache/**/*"
    ],
    "scripts": [
      "node_modules/whatsapp-web.js/**/*.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  }
}
